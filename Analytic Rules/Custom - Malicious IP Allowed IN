AzureNetworkAnalytics_CL
| where SubType_s == 'FlowLog'
    and FlowType_s == 'MaliciousFlow'
    and (FASchemaVersion_s == '1' or FASchemaVersion_s == '2')
| where AllowedInFlows_d == 1
| project
    AllowedInFlows_d,
    Country_s,
    FlowDirection_s,
    FlowType_s,
    FlowCount = max_of(AllowedInFlows_d + DeniedInFlows_d, AllowedOutFlows_d + DeniedOutFlows_d),
    DeniedInFlows_d,
    AllowedOutFlows_d,
    DeniedOutFlows_d,
    InboundBytes_d,
    OutboundBytes_d,
    InboundPackets_d,
    OutboundPackets_d,
    SrcIP_s,
    DestIP_s,
    L4Protocol_s,
    L7Protocol_s,
    DestPort_d,
    NIC1_s,
    NIC2_s,
    VM1_s,
    VM2_s,
    Subnet1_s,
    Subnet2_s,
    Region1_s,
    Region2_s,
    Subscription1_g,
    Subscription2_g,
    NSGRule_s,
    NSGList_s,
    TimeGenerated,
    TimeProcessed_t


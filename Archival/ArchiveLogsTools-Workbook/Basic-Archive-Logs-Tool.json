                  "type": 1,
                  "value": "{\r\n\t\"properties\":{\r\n\t\t\"retentionInDays\": null,\r\n\t\t\"totalRetentionInDays\": 200\r\n\t}\r\n}",
                  "typeSettings": {
                    "multiLineText": true,
                    "editorLanguage": "json",
